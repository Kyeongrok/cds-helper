<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:CdsHelper.Form.UI.Views">

    <Style TargetType="{x:Type views:SettingsDialog}">
        <Setter Property="Background" Value="Azure" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:SettingsDialog}">
                    <Border Background="{TemplateBinding Background}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- 마커 크기 설정 -->
                        <GroupBox Grid.Row="0" Header="지도 설정" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="마커 크기:" VerticalAlignment="Center" Margin="0,0,10,0" />
                                <Slider x:Name="PART_MarkerSizeSlider" Grid.Column="1"
                                        Minimum="4" Maximum="20" Value="8"
                                        TickFrequency="2" IsSnapToTickEnabled="True"
                                        VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Value, ElementName=PART_MarkerSizeSlider, StringFormat={}{0:F0}}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Grid>
                        </GroupBox>

                        <!-- 버튼 -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                            <Button x:Name="PART_OkButton" Content="확인" Width="80" Height="30" Margin="0,0,10,0" IsDefault="True" />
                            <Button x:Name="PART_CancelButton" Content="취소" Width="80" Height="30" IsCancel="True" />
                        </StackPanel>
                    </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
