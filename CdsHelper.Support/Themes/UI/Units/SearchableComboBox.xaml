<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units">

    <Style TargetType="{x:Type units:SearchableComboBox}">
        <Setter Property="Height" Value="25" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:SearchableComboBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="18" />
                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="PART_SearchBox"
                                 Grid.Column="0"
                                 Padding="3,2"
                                 VerticalContentAlignment="Center" />

                        <Button x:Name="PART_ClearButton"
                                Grid.Column="1"
                                Content="✕"
                                FontSize="9"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Focusable="False"
                                Cursor="Hand" />

                        <ToggleButton x:Name="PART_ToggleButton"
                                      Grid.Column="2"
                                      Content="▼"
                                      FontSize="8"
                                      IsChecked="{Binding IsOpen, ElementName=PART_Popup, Mode=TwoWay}"
                                      Focusable="False" />

                        <Popup x:Name="PART_Popup"
                               PlacementTarget="{Binding ElementName=PART_SearchBox}"
                               Placement="Bottom"
                               StaysOpen="True"
                               AllowsTransparency="True"
                               PopupAnimation="Slide">
                            <Border Background="White"
                                    BorderBrush="#CCCCCC"
                                    BorderThickness="1"
                                    MaxHeight="200"
                                    MinHeight="30"
                                    MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                <ListBox x:Name="PART_ListBox"
                                         DisplayMemberPath="{TemplateBinding DisplayMemberPath}"
                                         MaxHeight="180"
                                         MinHeight="25"
                                         BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" />
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
