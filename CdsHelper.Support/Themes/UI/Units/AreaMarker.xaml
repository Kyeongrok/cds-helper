<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units">

    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    <Style TargetType="{x:Type units:AreaMarker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:AreaMarker}">
                    <Canvas>
                        <Border Width="{Binding AreaWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                Height="{Binding AreaHeight, RelativeSource={RelativeSource TemplatedParent}}"
                                Background="{TemplateBinding FillBrush}"
                                BorderBrush="{TemplateBinding StrokeBrush}"
                                BorderThickness="2" />

                        <TextBlock Text="{TemplateBinding AreaName}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{TemplateBinding StrokeBrush}"
                                   Visibility="{Binding ShowLabel, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Canvas.Left="5"
                                   Canvas.Top="5">
                            <TextBlock.Background>
                                <SolidColorBrush Color="White" Opacity="0.8" />
                            </TextBlock.Background>
                        </TextBlock>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
