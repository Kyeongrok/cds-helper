<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:CdsHelper.Support.UI.Units">

    <!-- AccordionControl Style (아코디언 메뉴) -->
    <Style TargetType="{x:Type units:AccordionControl}">
        <Setter Property="Background" Value="#104F89"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:AccordionControl}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer Focusable="False"
                                      Padding="{TemplateBinding Padding}"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- AccordionItem Style (아코디언 항목) -->
    <Style TargetType="{x:Type units:AccordionItem}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:AccordionItem}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border x:Name="headerBorder"
                                Grid.Row="0"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#0D3D6B"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition x:Name="textColumn" Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <ContentPresenter x:Name="iconPresenter"
                                                  Grid.Column="0"
                                                  Content="{TemplateBinding Icon}"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,10,0"/>

                                <!-- Header Text -->
                                <ContentPresenter x:Name="headerText"
                                                  Grid.Column="1"
                                                  ContentSource="Header"
                                                  VerticalAlignment="Center"/>

                                <!-- Expand Arrow -->
                                <Path x:Name="expandArrow"
                                      Grid.Column="2"
                                      Data="M 0 0 L 5 5 L 10 0"
                                      Stroke="{TemplateBinding Foreground}"
                                      StrokeThickness="2"
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,0"
                                      Visibility="Collapsed"/>
                            </Grid>
                        </Border>

                        <!-- Sub Items -->
                        <Border x:Name="itemsBorder"
                                Grid.Row="1"
                                Background="#0D3D6B"
                                Visibility="Collapsed">
                            <ItemsPresenter Margin="0"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- 그룹 항목 -->
                        <Trigger Property="IsGroup" Value="True">
                            <Setter TargetName="headerBorder" Property="Background" Value="#104F89"/>
                            <Setter TargetName="expandArrow" Property="Visibility" Value="Visible"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Trigger>
                        <!-- 확장 상태 -->
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="itemsBorder" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="expandArrow" Property="Data" Value="M 0 5 L 5 0 L 10 5"/>
                            <Setter TargetName="headerBorder" Property="Background" Value="#1A6BB8"/>
                        </Trigger>
                        <!-- 마우스 오버 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="headerBorder" Property="Background" Value="#1976D2"/>
                            <Setter Property="Foreground" Value="#E3F2FD"/>
                        </Trigger>
                        <!-- 선택 상태 -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="headerBorder" Property="Background" Value="#1A6BB8"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter TargetName="headerBorder" Property="BorderBrush" Value="#42A5F5"/>
                            <Setter TargetName="headerBorder" Property="BorderThickness" Value="3,0,0,1"/>
                        </Trigger>
                        <!-- 하위 항목 스타일 (그룹이 아닌 항목) -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsGroup" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Padding" Value="25,8,15,8"/>
                            <Setter Property="FontSize" Value="12"/>
                        </MultiTrigger>
                        <!-- 최소화 모드 (아이콘만 표시) -->
                        <DataTrigger Binding="{Binding IsMinimized, RelativeSource={RelativeSource AncestorType=units:AccordionControl}}" Value="True">
                            <Setter TargetName="headerText" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="expandArrow" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="itemsBorder" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="iconPresenter" Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter TargetName="headerBorder" Property="ToolTip" Value="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </DataTrigger>
                        <!-- 최소화 모드에서 그룹 숨기기 -->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsMinimized, RelativeSource={RelativeSource AncestorType=units:AccordionControl}}" Value="True"/>
                                <Condition Binding="{Binding IsGroup, RelativeSource={RelativeSource Self}}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </MultiDataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
